#include<iostream>
#include<string>
using namespace std;
struct student
{
	string xuehao;
	string name;
	int chji1;
	int chji2;
	int chji3;
};
int main()
{
	int N,i,max=0,k=0;
	cin>>N;
	float a[N],b=0,c=0,e=0;
	student stu[N];
	for(i=0;i<N;i++)
	cin>>stu[i].xuehao>>stu[i].name>>stu[i].chji1>>stu[i].chji2>>stu[i].chji3;
	for(i=0;i<N;i++)
	{
		b+=(stu[i].chji1)/N;
		c+=(stu[i].chji2)/N;
		e+=(stu[i].chji3)/N;
	}
	cout<<b<<' '<<c<<' '<<e<<endl;
	for(i=0;i<N;i++)
	a[i]=(stu[i].chji1+stu[i].chji2+stu[i].chji3)/3;
	max=a[0];
	for(i=1;i<N;i++)
	{
		if(max<a[i])
		{
			max=a[i];
			k=i;
		}
	}
	cout<<stu[k].xuehao<<' '<<stu[k].name<<' '<<stu[k].chji1<<' '<<stu[k].chji2<<' '<<stu[k].chji3;
	return 0;
}